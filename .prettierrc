{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 120,
	"semi": true,
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"svelteAllowShorthand": true,
				"svelteIndentScriptAndStyle": true,
				"svelteStrictMode": false
			}
		},
		{
			"files": "*.{js,ts}",
			"options": {
				"useTabs": true,
				"tabWidth": 2
			}
		},
		{
			"files": "*.json",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
